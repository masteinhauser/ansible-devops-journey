{
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu:14.04",
      "commit": true,
      "pull": true
    }
  ],

  "provisioners": [
    {
        "type": "shell",
        "inline": [
            "apt-get -y update",
            "apt-get install -y python-pip python-dev",
            "pip install ansible",
            "mkdir /tmp/packer-provisioner-ansible-local"
        ]
    },
    {
        "type": "file",
        "source": "simple-chat/simple-chat.tar.gz",
        "destination": "/tmp/simple-chat.tar.gz"
    },
    {
        "type": "file",
        "source": "ansible.cfg",
        "destination": "/tmp/packer-provisioner-ansible-local/ansible.cfg"
    },
    {
      "type": "ansible-local",
      "command": "ansible-playbook",
      "extra_arguments": [
        "-vvv",
        "--limit cs01"
      ],
      "playbook_file": "site.yml",
      "inventory_file": "example/packer-docker/hosts",
      "group_vars": "example/packer-docker/group_vars",
      "role_paths": [
        "roles/nginx",
        "roles/simple-chat"
      ]
    }
  ],

  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "masteinhauser/ansible-devops-journey",
        "tag": "ansible-local"
      },
      "docker-push"
    ]
  ]
}
